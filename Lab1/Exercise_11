<script src='https://d3js.org/d3.v7.min.js'></script> 
 
<script> 
    //Create SVG element 
    var svg = d3.select("body") 
    .append("svg") 
    .attr("width",  400) 
    .attr("height", 400) 
    .style("border", '1px solid green'); 
 
    //Create line element inside SVG 
    svg.append("line") 
       .attr("x1", 100) 
       .attr("x2", 200) 
       .attr("y1", 100) 
       .attr("y2", 100) 
       .attr("stroke", "black") // top line black color
   	svg.append("line") 
       .attr("x1", 200) 
       .attr("x2", 100) 
       .attr("y1", 200) 
       .attr("y2", 200) 
       .attr("stroke", "red")  //bottom line red color
    svg.append("line") 
       .attr("x1", 200) 
       .attr("x2", 200) 
       .attr("y1", 100) 
       .attr("y2", 200) 
       .attr("stroke", "green") //right line green color
    svg.append("line") 
       .attr("x1", 100) 
       .attr("x2", 100) 
       .attr("y1", 100) 
       .attr("y2", 200) 
       .attr("stroke", "yellow") //yellow left line
</script> 
